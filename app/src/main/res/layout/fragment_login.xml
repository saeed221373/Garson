<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAndSignup.loginFragment"
    android:id="@+id/login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/loginimage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/loginuser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.8"
                android:backgroundTint="@color/logintext"
                android:backgroundTintMode="multiply"
                android:gravity="center"
                android:hint="نام کاربری"
                android:shadowColor="@color/white"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/loginimage2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:src="@drawable/padlock" />

            <EditText
                android:id="@+id/loginpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.8"
                android:backgroundTint="@color/logintext"
                android:gravity="center"
                android:hint="رمزعبور"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rediucebutton"
            android:gravity="center"
            android:text="ورود"
            android:textColor="@color/white"

            />
        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/signuptext"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ثبت نام "
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:layout_gravity="right"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" حساب کاربری ندارید؟ "
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" فراموشی رمز عبور "
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <TextView
                android:layout_gravity="right"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" آیا رمزعبور خود را فراموش کرده اید؟"
                android:textColor="@color/white"
                />



        </LinearLayout>

    </LinearLayout>


</FrameLayout>
